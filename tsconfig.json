{
  "compilerOptions": {
    "lib": [
      "dom",
      "dom.iterable",
      "es2015"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "jsx": "react",
    "target": "es5",
    "sourceMap": true,
    "module": "esnext",
    "isolatedModules": true
  },
  "include": [
    "src/*"
  ]
}
